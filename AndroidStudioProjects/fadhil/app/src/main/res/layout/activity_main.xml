<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F9"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Judul Aplikasi -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kalkulator Nyenii"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#1E88E5"
            android:gravity="center"
            android:padding="12dp"
            android:background="#E3F2FD" />

        <!-- Spinner untuk pilih bangun datar -->
        <Spinner
            android:id="@+id/shapeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />

        <!-- Container untuk input nilai -->
        <LinearLayout
            android:id="@+id/inputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#FFFFFF"
            android:elevation="3dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <!-- Tombol hitung -->
        <Button
            android:id="@+id/calculateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hitung"
            android:backgroundTint="#1E88E5"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <!-- Hasil -->
        <LinearLayout
            android:id="@+id/resultContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="#E3F2FD"
            android:padding="10dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/areaResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Luas:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/perimeterResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keliling:"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Bagian scroll horizontal (seperti berita) -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:padding="8dp"
            android:background="#E8EAF6">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Kotak 1 -->
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    android:background="#C5CAE9"
                    android:gravity="center"
                    android:layout_marginEnd="10dp"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama:"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mochammad Fadhil"/>
                </LinearLayout>

                <!-- Kotak 2 -->
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    android:background="#9FA8DA"
                    android:gravity="center"
                    android:layout_marginEnd="10dp"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NRP:"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5027231068"/>
                </LinearLayout>

                <!-- Kotak 3 -->
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    android:background="#7986CB"
                    android:gravity="center"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mata Kuliah:"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pemrograman Mobile"/>
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Tombol untuk pindah halaman (Intent) -->
        <Button
            android:id="@+id/btnTentang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tentang Saya"
            android:backgroundTint="#3949AB"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</ScrollView>
